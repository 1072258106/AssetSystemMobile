<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/title_bar_normal_mode"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_h"
        android:layout_gravity="center_vertical"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/rlcode"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/title_bar_normal_mode"
        android:layout_marginTop="1dp"
        android:background="@color/skyblue" >

        <TextView
            android:id="@+id/code"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center|left"
            android:text="使用部门"
            android:textColor="@color/white"
            android:textSize="22.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/codevalue"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/code"
            android:background="@drawable/bukeshuru"
            android:gravity="center|left"
            android:text=""
            android:textColor="#464d4c"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/show"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rlcode"
        android:layout_marginTop="1dp"
        android:background="@color/skyblue" >

        <TextView
            android:id="@+id/tvshow"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center|left"
            android:text="资产分类"
            android:textColor="@color/white"
            android:textSize="22.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_show"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/tvshow"
            android:background="@drawable/bukeshuru"
            android:gravity="center|left"
            android:textColor="#464d4c"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/department"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/show"
        android:layout_marginTop="1dp"
        android:background="@color/skyblue" >

        <TextView
            android:id="@+id/tvdepartment"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center|left"
            android:text="规格型号"
            android:textColor="@color/white"
            android:textSize="22.0sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_choose"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/tvdepartment"
            android:background="@drawable/btn_normal_selector"
            android:gravity="center"
            android:text="选择"
            android:textColor="@color/white"
            android:textSize="18.0sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_normal_selector"
        android:gravity="center"
        android:text="搜索"
        android:textColor="@color/white"
        android:textSize="18.0sp" />

    <ListView
        android:id="@+id/departmentlist"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_above="@id/btn_search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/department"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:cacheColorHint="#00000000"
        android:divider="#dadada"
        android:dividerHeight="0.5dip"
        android:listSelector="@null"
        android:overScrollMode="never" />

</RelativeLayout>